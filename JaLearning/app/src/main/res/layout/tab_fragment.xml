        <com.msquare.widget.mprogressbar.MProgressBar
            android:padding="20dp"
            android:id="@+id/mprocess"
            app:strokeWidth="20dp"
            app:progress="30"
            app:secondaryProgress="50"
            app:backgroundColor="#999999"
            app:progressColor="#00ff00"
            app:secondaryProgressColor="#ff3344"
            app:primaryCapSize="20"
            app:secodaryCapSize="20"
            app:primaryCapVisibility="true"
            app:secodaryCapVisibility="true"
            android:layout_width="260dp"
            android:layout_height="260dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50%"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:id="@+id/txt_secondsleft"
            android:layout_alignRight="@+id/mprocess"
            android:layout_alignLeft="@+id/mprocess"
